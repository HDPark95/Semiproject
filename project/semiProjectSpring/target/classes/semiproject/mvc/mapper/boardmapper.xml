<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="board">
<insert id="add" parameterType="bvo"> <!-- 게시글 작성 -->
insert into b_board(b_num,b_writer,b_subject,b_pwd,b_type,b_date,content) 
values(b_num_seq.nextVal,#{b_writer},#{b_subject},#{b_pwd},#{b_type},sysdate
,#{content})
</insert>

<select id="detail" parameterType="bvo">
select * from b_board where b_num = #{b_num}
</select>

</mapper>