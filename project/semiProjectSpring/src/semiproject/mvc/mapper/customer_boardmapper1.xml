<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="board1">
<insert id="insert" parameterType="cbvo1"> <!-- 게시글 작성 -->
insert into customer_board1(c_num,c_type,c_writer,c_subject,c_content,c_pwd,anum)
values(customer_board1_seq.nextVal,#{c_type},#{c_writer},#{c_subject},#{c_content},#{c_pwd},#{anum})
</insert>

<select id="list" resultType="cbvo1">
select c_num,c_subject,c_writer,c_regdate,c_anschk from customer_board1 order by c_num desc 
</select> 


<select id="viewDetail" resultType="cbvo1" parameterType="int">
select * from customer_board1 where c_num = #{c_num}
</select>

<update id="ans" parameterType="cbvo1">
update customer_board1
set c_ans= #{c_ans}
where c_num=#{c_num}
</update>

<delete id="delete" parameterType="int" >
delete customer_board1 where c_num = #{c_num}
</delete>

<select id="selectBoard" resultType="cbvo1" parameterType="c_pagevo">
select * from (select rownum r_num, a.* from (select * from customer_board1 order by c_num desc) a ) where r_num between #{start} and #{end}
</select>
<select id="countBoard" resultType="int">
select count(*) cnt from customer_board1
</select>



</mapper>  